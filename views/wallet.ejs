    <script>
        // Wallet state
        let account = null;
        let provider = null;
        let signer = null;
        let contract = null;
        let isCorrectNetwork = false;

        // DOM elements
        const elements = {
            metamaskNotInstalled: document.getElementById('metamask-not-installed'),
            walletDisconnected: document.getElementById('wallet-disconnected'),
            walletConnected: document.getElementById('wallet-connected'),
            walletContent: document.getElementById('wallet-content'),
            noWalletMessage: document.getElementById('no-wallet-message'),
            walletAddress: document.getElementById('wallet-address'),
            networkBadge: document.getElementById('network-badge'),
            balanceAmount: document.getElementById('balance-amount'),
            claimableAmount: document.getElementById('claimable-amount'),
            claimBreakdown: document.getElementById('claim-breakdown'),
            goodiesGrid: document.getElementById('goodies-grid'),
            btnConnect: document.getElementById('btn-connect'),
            btnDisconnect: document.getElementById('btn-disconnect'),
            btnSwitchNetwork: document.getElementById('btn-switch-network'),
            btnRefreshBalance: document.getElementById('btn-refresh-balance'),
            btnClaim: document.getElementById('btn-claim'),
            btnTransfer: document.getElementById('btn-transfer'),
            transferForm: document.getElementById('transfer-form'),
            claimStatus: document.getElementById('claim-status'),
            transferStatus: document.getElementById('transfer-status')
        };

        // Check if MetaMask is installed
        const hasMetaMask = typeof window.ethereum !== 'undefined';

        // Initialize page
        document.addEventListener('DOMContentLoaded', function () {
            if (!hasMetaMask) {
                elements.metamaskNotInstalled.style.display = 'block';
                elements.noWalletMessage.style.display = 'block';
            } else {
                elements.walletDisconnected.style.display = 'block';
                elements.noWalletMessage.style.display = 'block';

                // Check if already connected
                checkExistingConnection();

                // Listen for account changes
                window.ethereum.on('accountsChanged', handleAccountsChanged);
                window.ethereum.on('chainChanged', handleChainChanged);
            }

            // Load goodies
            renderGoodies();

            // Event listeners
            elements.btnConnect.addEventListener('click', connect);
            elements.btnDisconnect.addEventListener('click', disconnect);
            elements.btnSwitchNetwork.addEventListener('click', switchNetwork);
            elements.btnRefreshBalance.addEventListener('click', fetchBalance);
            elements.btnClaim.addEventListener('click', claimTokens);
            elements.transferForm.addEventListener('submit', handleTransfer);
        });

        async function checkExistingConnection() {
            try {
                const accounts = await window.ethereum.request({ method: 'eth_accounts' });
                if (accounts.length > 0) {
                    await setupWallet(accounts[0]);
                }
            } catch (err) {
                console.error('Error checking existing connection:', err);
            }
        }

        async function connect() {
            if (!hasMetaMask) return;

            elements.btnConnect.disabled = true;
            elements.btnConnect.innerHTML = '<span class="spinner"></span> Connecting...';

            try {
                const accounts = await window.ethereum.request({ method: 'eth_requestAccounts' });
                if (accounts.length > 0) {
                    await setupWallet(accounts[0]);
                }
            } catch (err) {
                console.error('Connection error:', err);
                showStatus(elements.claimStatus, 'error', err.message || 'Failed to connect');
            } finally {
                elements.btnConnect.disabled = false;
                elements.btnConnect.innerHTML = '<span class="mdi mdi-wallet-plus"></span> Connect Wallet';
            }
        }

        async function setupWallet(walletAddress) {
            account = walletAddress;

            // Setup ethers provider and contract
            provider = new ethers.BrowserProvider(window.ethereum);
            signer = await provider.getSigner();
            contract = new ethers.Contract(SDC_CONFIG.CONTRACT_ADDRESS, SDC_CONFIG.ABI, signer);

            // Update UI
            updateConnectionUI();

            // Check network
            await checkNetwork();

            // Fetch data
            await fetchBalance();
            await fetchClaimable();
        }

        function disconnect() {
            account = null;
            provider = null;
            signer = null;
            contract = null;
            isCorrectNetwork = false;

            updateConnectionUI();
        }

        function updateConnectionUI() {
            if (account) {
                elements.walletDisconnected.style.display = 'none';
                elements.walletConnected.style.display = 'block';
                elements.walletContent.style.display = 'block';
                elements.noWalletMessage.style.display = 'none';

                // Display shortened address
                const shortened = account.slice(0, 6) + '...' + account.slice(-4);
                elements.walletAddress.textContent = shortened;
            } else {
                elements.walletDisconnected.style.display = 'block';
                elements.walletConnected.style.display = 'none';
                elements.walletContent.style.display = 'none';
                elements.noWalletMessage.style.display = 'block';
                elements.balanceAmount.textContent = '0';
            }
        }

        async function checkNetwork() {
            try {
                const chainId = await window.ethereum.request({ method: 'eth_chainId' });
                isCorrectNetwork = parseInt(chainId, 16) === SDC_CONFIG.CHAIN_ID;

                if (isCorrectNetwork) {
                    elements.networkBadge.className = 'network-badge correct';
                    elements.networkBadge.innerHTML = '<span class="mdi mdi-check-circle"></span> Polygon Amoy';
                    elements.btnSwitchNetwork.style.display = 'none';
                } else {
                    elements.networkBadge.className = 'network-badge wrong';
                    elements.networkBadge.innerHTML = '<span class="mdi mdi-alert-circle"></span> Wrong Network';
                    elements.btnSwitchNetwork.style.display = 'inline-flex';
                }
            } catch (err) {
                console.error('Error checking network:', err);
            }
        }

        async function switchNetwork() {
            try {
                await window.ethereum.request({
                    method: 'wallet_switchEthereumChain',
                    params: [{ chainId: SDC_CONFIG.CHAIN_ID_HEX }]
                });
            } catch (switchError) {
                // Chain not added, try to add it
                if (switchError.code === 4902) {
                    try {
                        await window.ethereum.request({
                            method: 'wallet_addEthereumChain',
                            params: [SDC_CONFIG.NETWORK_CONFIG]
                        });
                    } catch (addError) {
                        console.error('Error adding network:', addError);
                        showStatus(elements.claimStatus, 'error', 'Failed to add Polygon Amoy network');
                    }
                } else {
                    console.error('Error switching network:', switchError);
                }
            }
        }

        async function fetchBalance() {
            if (!contract || !account) return;

            try {
                const balance = await contract.balanceOf(account);
                const formatted = parseFloat(ethers.formatEther(balance)).toFixed(2);
                elements.balanceAmount.textContent = formatted;
            } catch (err) {
                console.error('Error fetching balance:', err);
            }
        }

        async function fetchClaimable() {
            try {
                const response = await fetch('/api/sdc');
                const data = await response.json();

                elements.claimableAmount.textContent = data.claimable + ' SDC';
                elements.btnClaim.disabled = data.claimable === 0;

                // Render claim breakdown
                if (data.claims && data.claims.length > 0) {
                    elements.claimBreakdown.innerHTML = data.claims.map(claim => `
                        <div class="claim-item">
                            <span class="event-name">Event #${claim.eventId}</span>
                            <span class="event-amount">+${claim.amount} SDC</span>
                        </div>
                    `).join('');
                } else {
                    elements.claimBreakdown.innerHTML = '<p style="text-align: center; color: #888;">No claimable tokens</p>';
                }
            } catch (err) {
                console.error('Error fetching claimable:', err);
            }
        }

        async function claimTokens() {
            if (!account || !isCorrectNetwork) {
                showStatus(elements.claimStatus, 'error', 'Please connect wallet and switch to Polygon Amoy');
                return;
            }

            elements.btnClaim.disabled = true;
            elements.btnClaim.innerHTML = '<span class="spinner"></span> Claiming...';
            showStatus(elements.claimStatus, 'pending', 'Processing claim request...');

            try {
                const response = await fetch('/api/claim', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ walletAddress: account })
                });

                const result = await response.json();

                if (result.success) {
                    showStatus(elements.claimStatus, 'success',
                        `Successfully claimed ${result.amount} SDC! <a href="https://amoy.polygonscan.com/tx/${result.txHash}" target="_blank">View Transaction</a>`);
                    await fetchBalance();
                    await fetchClaimable();
                } else {
                    showStatus(elements.claimStatus, 'error', result.error || 'Claim failed');
                }
            } catch (err) {
                console.error('Claim error:', err);
                showStatus(elements.claimStatus, 'error', err.message || 'Failed to claim tokens');
            } finally {
                elements.btnClaim.disabled = false;
                elements.btnClaim.innerHTML = '<span class="mdi mdi-check-circle"></span> Claim Tokens';
            }
        }

        async function handleTransfer(e) {
            e.preventDefault();

            const recipient = document.getElementById('recipient-address').value;
            const amount = document.getElementById('transfer-amount').value;

            if (!ethers.isAddress(recipient)) {
                showStatus(elements.transferStatus, 'error', 'Invalid recipient address');
                return;
            }

            if (!amount || parseFloat(amount) <= 0) {
                showStatus(elements.transferStatus, 'error', 'Please enter a valid amount');
                return;
            }

            if (!isCorrectNetwork) {
                showStatus(elements.transferStatus, 'error', 'Please switch to Polygon Amoy network');
                return;
            }

            elements.btnTransfer.disabled = true;
            elements.btnTransfer.innerHTML = '<span class="spinner"></span> Sending...';
            showStatus(elements.transferStatus, 'pending', 'Please confirm the transaction in MetaMask...');

            try {
                const amountWei = ethers.parseEther(amount);
                const tx = await contract.transfer(recipient, amountWei);

                showStatus(elements.transferStatus, 'pending', 'Transaction submitted, waiting for confirmation...');

                const receipt = await tx.wait();

                showStatus(elements.transferStatus, 'success',
                    `Successfully sent ${amount} SDC! <a href="https://amoy.polygonscan.com/tx/${receipt.hash}" target="_blank">View Transaction</a>`);

                await fetchBalance();

                // Clear form
                document.getElementById('recipient-address').value = '';
                document.getElementById('transfer-amount').value = '';
            } catch (err) {
                console.error('Transfer error:', err);
                showStatus(elements.transferStatus, 'error', err.reason || err.message || 'Transfer failed');
            } finally {
                elements.btnTransfer.disabled = false;
                elements.btnTransfer.innerHTML = '<span class="mdi mdi-send"></span> Send SDC';
            }
        }

        function renderGoodies() {
            const goodies = SDC_CONFIG.GOODIES;
            elements.goodiesGrid.innerHTML = goodies.map(goodie => `
                <div class="goodie-item">
                    <div class="goodie-header">
                        <div class="goodie-icon">
                            <span class="mdi ${goodie.icon}"></span>
                        </div>
                        <div>
                            <div class="goodie-title">${goodie.name}</div>
                            <div class="goodie-category">${goodie.category}</div>
                        </div>
                    </div>
                    <p class="goodie-description">${goodie.description}</p>
                    <div class="goodie-footer">
                        <div class="goodie-cost">
                            <span class="mdi mdi-currency-usd"></span>
                            ${goodie.cost} SDC
                        </div>
                        <button class="btn-wallet btn-redeem" onclick="redeemGoodie('${goodie.id}', ${goodie.cost})">
                            Redeem
                        </button>
                    </div>
                </div>
            `).join('');
        }

        async function redeemGoodie(goodieId, cost) {
            if (!account || !isCorrectNetwork) {
                alert('Please connect your wallet and switch to Polygon Amoy network');
                return;
            }

            const balance = parseFloat(elements.balanceAmount.textContent);
            if (balance < cost) {
                alert(`Insufficient balance. You need ${cost} SDC but only have ${balance} SDC.`);
                return;
            }

            // For demo purposes, just show a message
            // In production, this would burn tokens and issue the reward
            alert(`Redeeming ${goodieId} for ${cost} SDC... (Demo mode - no actual transaction)`);
        }

        function showStatus(element, type, message) {
            element.innerHTML = `
                <div class="tx-status ${type}">
                    ${type === 'pending' ? '<span class="spinner" style="border-color: #856404; border-top-color: transparent;"></span>' : ''}
                    ${type === 'success' ? '<span class="mdi mdi-check-circle"></span>' : ''}
                    ${type === 'error' ? '<span class="mdi mdi-alert-circle"></span>' : ''}
                    <span>${message}</span>
                </div>
            `;
        }

        function handleAccountsChanged(accounts) {
            if (accounts.length === 0) {
                disconnect();
            } else if (accounts[0] !== account) {
                setupWallet(accounts[0]);
            }
        }

        function handleChainChanged() {
            checkNetwork();
            fetchBalance();
        }
    </script>
