# Copy this file to .env and fill in your values
# WARNING: never commit .env with real secrets to version control.
# Add .env to .gitignore

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3000
NODE_ENV=development
SESSION_SECRET=your_secure_random_secret_here

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================
# Set to true for testing without real blockchain
MOCK_CHAIN=false

# Polygon Amoy Testnet RPC endpoint
AMOY_RPC_URL=https://rpc-amoy.polygon.technology/

# ============================================
# BADGE CONTRACT (SunDevilBadge.sol)
# ============================================
# Address of deployed SunDevilBadge contract on Amoy testnet
BADGE_CONTRACT_ADDRESS=

# Private key for minting badges (must have MINTER role)
PRIVATE_KEY=0xYOUR_MINTER_PRIVATE_KEY

# Service wallet for automating operations
SERVICE_WALLET_PRIVATE_KEY=0xYOUR_SERVICE_WALLET_PRIVATE_KEY

# ============================================
# SDC TOKEN (Fungible Token)
# ============================================
# Address of deployed SDC token contract
SDC_TOKEN_ADDRESS=

# Token decimals (usually 18)
SDC_DECIMALS=18

# Wallet that receives payments in the store
STORE_WALLET_ADDRESS=0xSTORE_WALLET_ADDRESS

# ============================================
# SDC REWARD AMOUNTS (in whole tokens)
# ============================================
# Rewards distributed automatically for user actions
SDC_REWARD_ENROLL=50
SDC_REWARD_ATTEND=100
SDC_REWARD_REFERRAL=5
SDC_REWARD_BADGE=15

# ============================================
# OPTIONAL: Polygon Explorers (for Hardhat)
# ============================================
POLYGONSCAN_API_KEY=
COINMARKETCAP_API_KEY=
REPORT_GAS=false
